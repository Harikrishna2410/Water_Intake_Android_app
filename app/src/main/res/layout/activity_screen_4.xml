<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Screen_4">

  <androidx.cardview.widget.CardView
    android:id="@+id/card_button_leta_instake_screen_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    app:cardBackgroundColor="#6AB6F6"

    app:cardCornerRadius="7dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

      <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat"
        android:text="Let's Intake"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="15dp">

      </TextView>

  </androidx.cardview.widget.CardView>

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.1" />

  <ImageView
    android:id="@+id/back_press_screen_4"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline10"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/back" />


  <LinearLayout
    android:id="@+id/cardView3"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginStart="32dp"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginRight="32dp"
    android:background="@drawable/round_circle_screen_4"
    android:elevation="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline10">

    <!--      android:layout_margin="50dp"-->

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/baseline_check_white_48dp" />


  </LinearLayout>

  <TextView
    android:id="@+id/textView10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:ems="10"
    android:fontFamily="@font/montserrat_bold"
    android:gravity="center"
    android:text="Yay! you are ready to use Water Intake!"
    android:textColor="@color/black"
    android:textSize="21dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cardView3" />

  <TextView
    android:id="@+id/textView11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:ems="18"
    android:gravity="center"
    android:text="Stay healthy, reach your daily intakes, feel better  and succeed!"
    android:textColor="@color/black"
    android:textSize="14dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView10" />
</androidx.constraintlayout.widget.ConstraintLayout>