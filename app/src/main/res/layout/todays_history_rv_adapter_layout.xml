<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="65dp"
  android:background="@color/white"
  android:elevation="2dp"
  android:layout_margin="5dp"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent">


  <LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/np_text_color"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tv_ml"
    app:layout_constraintTop_toTopOf="parent"></LinearLayout>

  <TextView
    android:id="@+id/tv_ml"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginStart="8dp"
    android:gravity="center"
    android:text="200\nMl"
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <TextView
    android:id="@+id/tv_time"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="Time 12:00 PM"
    android:textColor="#000000"
    android:textSize="14sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/delete_btn"
    app:layout_constraintStart_toEndOf="@+id/linearLayout2"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/delete_btn"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_marginEnd="8dp"
    android:src="@drawable/baseline_delete_forever_red_800_48dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/today_history_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="@+id/tv_time"
    app:layout_constraintStart_toEndOf="@+id/tv_ml"
    app:layout_constraintTop_toBottomOf="@+id/tv_time" />

</androidx.constraintlayout.widget.ConstraintLayout>
