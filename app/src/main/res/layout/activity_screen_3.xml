<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Screen_3">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.10123119" />

  <ImageView
    android:id="@+id/back_press_screen_3"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline9"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/back" />

  <TextView
    android:id="@+id/inteke_level_main_title_screen_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:fontFamily="@font/roboto_medium"
    android:text="2.46L"
    android:textColor="#000000"
    android:textSize="120dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline9" />

  <TextView
    android:id="@+id/sub_title_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:fontFamily="@font/montserrat"
    android:text="Your Daily Intake Is 2.46L"
    android:textColor="@color/black"
    android:textSize="21dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/inteke_level_main_title_screen_3" />

  <TextView
    android:id="@+id/sub_title_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:ems="17"
    android:fontFamily="@font/roboto"
    android:gravity="center"
    android:text="you can tap the value above to setup your own manual intake"
    android:textColor="@color/black"
    android:textSize="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sub_title_1" />

  <androidx.cardview.widget.CardView
    android:id="@+id/card_button_leta_instake_screen_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp"
    app:cardBackgroundColor="#6AB6F6"
    app:cardCornerRadius="7dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="20dp"
      android:paddingBottom="10dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat"
        android:text="Continue"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="15dp">

      </TextView>

    </LinearLayout>

  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>